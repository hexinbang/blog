<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.dao.UserDao">
    <resultMap id="userResult" type="user">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="auth_id" property="authId"></result>
        <result column="email" property="email"></result>
        <result column="sex" property="sex"></result>
        <result column="essay_id" property="essayId"></result>
    </resultMap>
    <select id="getUserById" resultMap="userResult">
        select * from user where id=#{id}
    </select>
    <update id="updateUser" parameterType="userVo">
        update user
        <set>
            <if test="password!='' and password!=null">password=#{password}</if>
            <if test="authId!=''and authId!=null">auth_id=#{authId}</if>
        </set>
        where id=#{id}
    </update>
    <insert id="insertUser" parameterType="userVo" >
        insert into
        user
        (username,password,auth_id,email,sex)
        values
       (#{username},#{password},#{authId},#{email},#{sex});
    </insert>
</mapper>
